{
    "env": {
        "browser": true,
        "es6": true,
        "jasmine": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "angular": true,
      "inject": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
      "angular"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
